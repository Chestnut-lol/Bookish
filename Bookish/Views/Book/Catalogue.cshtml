@using Microsoft.AspNetCore.Mvc.ModelBinding.Binders
@using Bookish.Controllers
@model Bookish.Models.ListOfBooks

@{
    ViewBag.Title = "Library's Catalogue Display";
}
<meta charset="UTF-8"></meta>
<h2>Library's Catalogue Display &#128512</h2>
<h4>(In order of most searched)</h4>


<hr><input type="button" style="background-color:mediumseagreen" style="text-align: right" value="Add book" onclick="location.href='@Url.Action("AddBook", "Book")'" /></hr>

<p></p>


<div class="container">

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Number of total copies</th>
            <th>Number of available copies</th>
            <th>Number of searches</th>
        </tr>
        </thead>

        <tbody>
        @{
            Book btnBook = new Book();
                foreach (var eachBook in Model.AllBooks)
                {
                    <tr>
                        <td>@eachBook.Id</td>
                        <td>@eachBook.Title</td>
                        <td>@eachBook.Author</td>
                        <td>@eachBook.NumOfCopies</td>
                        <td>@eachBook.NumOfAvailableCopies</td>
                        <td>@eachBook.Searches</td>

                        <form id="myBook"> <input type="hidden" id="id" value="@eachBook.Id"/> </form>
                        
                        <td><input type="button" style="background-color:cornflowerblue" value="Edit" onclick="location.href='@Url.Action("EditBook", "Book", new {bookId = @eachBook.Id })'" /></td>
                        <td><input type="button" style="background-color:indianred" value="Delete" onclick="location.href='@Url.Action("DeleteBook", "Book", new {bookId = @eachBook.Id })'" /></td>

                    </tr>
                }
            @* } *@
        }
        </tbody>

    </table>
</div>