
@model Bookish.Models.Member
@{
    ViewBag.Title = "Member Search";
}

<div class="jumbotron">
    <h2>Member Search</h2>
    <p class="lead"></p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("MemberQuery", "Member", FormMethod.Post))
        {
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Member ID: </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.MemberId, new { Type="number" })
                        <input type="submit" value="Search" />
                    </div>
                    
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Name: </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Name, new { Type = "text" })
                        <input type="submit" value="Search" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email: </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { Type="email" })
                        <input type="submit" value="Search" />
                    </div>
                </div>
                
            </form>
        }
    </div>
</div>

