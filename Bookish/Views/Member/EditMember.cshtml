
@model Bookish.Models.Member

@{
    ViewBag.Title = "Member Query Display";
}

<h3>Edit Member Info</h3>

<div class="row">
    @using (Html.BeginForm("MemberChange", "Member", FormMethod.Post))
    {
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Member ID: </label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value=@Model.MemberId>
                    @Html.HiddenFor(m => m.MemberId, new { Value = Model.MemberId })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name: </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { Value = Model.Name })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email: </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { Value = Model.Email })
                </div>
            </div>
            <input type="submit" value="Change" />
        </form>
    }
</div>
